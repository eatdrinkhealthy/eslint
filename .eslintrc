{
  "plugins": [
    "meteor",
    "react"
  ],
  "extends": [
    "airbnb/base",
    "plugin:meteor/recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "spread": true,
      "modules": true,
      "blockBindings": true,
      "destructuring": true,
      "arrowFunctions": true
    }
  },
  "rules": {
    "semi": 2,
    "no-console": 1,
    "quotes": [
        2, "double", { "avoidEscape": true, "allowTemplateLiterals": true }
      ],
    "react/no-danger": 1,
    "react/react-in-jsx-scope": 0,
    "meteor/eventmap-params": [
        2, { "templateInstanceParamName": "instance" }
      ],
    "import/no-unresolved": [
        2, { "ignore": ["^meteor/"] }
      ]
  }
}
